<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp">
    <meta http-equiv="Cache-Control" content="no-transform">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="红包扫雷">
    <title>高速不跑单</title>

    <link href="/styles/weui.min.css" rel="stylesheet" type="text/css">
    <link href="/styles/jquery-weui.css" rel="stylesheet" type="text/css">
    <link href="/styles/style.css" rel="stylesheet" type="text/css">


    <script type="text/javascript" src="http://res.wx.qq.com/open/js/jweixin-1.0.0.js"></script>

    @Scripts.Render("~/Scripts/Admin")
    <script src="/scripts/jquery.json.js" type="text/javascript"></script>
    <script src="/scripts/jquery-weui.js" type="text/javascript"></script>
    <script src="/Scripts/signalR/jquery.signalR-2.1.2.min.js"></script>
    <script src="/signalr/hubs" type="text/javascript"></script>

    <script src="/scripts/home/index.js" type="text/javascript"></script>
    <script src="/scripts/extention/jquery.common.msajax.js" type="text/javascript"></script>

    <script src="/Scripts/home/index.js?v=1"></script>
    <script src="/Scripts/group/index.js"></script>





    <script>
        wx.config({
            debug: false, // 开启调试模式,调用的所有api的返回值会在客户端alert出来，若要查看传入的参数，可以在pc端打开，参数信息会通过log打出，仅在pc端时才会打印。
            appId: 'wx3dc7fed192b9287e', // 必填，公众号的唯一标识
            timestamp: '1501837408', // 必填，生成签名的时间戳
            nonceStr: 'rt6HQ1dGeM3Hx88F', // 必填，生成签名的随机串
            signature: '0d70683a55467b5393ef26a1119d51beafc97855', // 必填，签名，见附录1
            jsApiList: [
                'getLocation',
                'checkJsApi',
                'onMenuShareTimeline',
                'onMenuShareAppMessage',
                'scanQRCode', 'openLocation'
            ] // 必填，需要使用的JS接口列表，所有JS接口列表见附录2
        });
        wx.ready(function () {
            wx.onMenuShareTimeline({
                title: '高速不跑单', // 分享标题
                desc: '高速不跑单', // 分享标题
                link: 'http://hb.ibangzx.com/group?memberid=1459', // 分享链接
                imgUrl: 'http://hb01.ibangzx.com/content/images/share.png', // 分享图标
                success: function () {
                    try {
                        if (shareCallBack) {
                            shareCallBack('http://hb.ibangzx.com/group?memberid=1459');
                        }
                    } catch (e) {

                    }
                },
                cancel: function () {
                    // 用户取消分享后执行的回调函数
                    $.toast("分享取消", 'cancel');
                }
            });
            wx.onMenuShareAppMessage({
                title: '高速不跑单', // 分享标题
                desc: '高速不跑单', // 分享标题
                link: 'http://hb.ibangzx.com/group?memberid=1459', // 分享链接
                imgUrl: 'http://hb01.ibangzx.com/content/images/share.png', // 分享图标
                success: function () {
                    try {
                        if (shareCallBack) {
                            shareCallBack('http://hb.ibangzx.com/group?memberid=1459');
                        }
                    } catch (e) {

                    }
                },
                cancel: function () {
                    // 用户取消分享后执行的回调函数
                    $.toast("分享取消", 'cancel');
                }
            });
        });

    </script>

</head>
<body>

    @RenderBody()

    <div class="weui-tabbar" id="footer">
        <a href="/" class="weui-tabbar__item ">
            <div class="weui-tabbar__icon"><i class="index"></i></div>
            <p class="weui-tabbar__label">首页</p>
        </a>
        <a href="/member/recharge" class="weui-tabbar__item weui-bar__item--on">
            <div class="weui-tabbar__icon"><i class="addico"></i></div>
            <p class="weui-tabbar__label">添加金币</p>
        </a>

        <a href="/group/newgroup" class="weui-tabbar__item ">
            <div class="weui-tabbar__icon"><i class="zuqunico"></i></div>
            <p class="weui-tabbar__label">组群</p>
        </a>
        <a href="/member" class="weui-tabbar__item ">
            <div class="weui-tabbar__icon"><i class="centerico"></i></div>
            <p class="weui-tabbar__label">个人中心</p>
        </a>
    </div>

    @RenderSection("scripts", false)
</body>
</html>